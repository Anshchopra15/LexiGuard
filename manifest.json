{
"manifest_version": 3,
"name": "LexiGuard (Hackathon Prototype)",
"version": "0.1.0",
"description": "Summarize and risk-score legal text in-page (prototype).",
"permissions": ["activeTab","scripting","storage"],
"host_permissions": ["<all_urls>"],
"action": {
"default_title": "LexiGuard",
"default_popup": "popup.html"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content_script.js"],
"run_at": "document_idle"
}
],
"icons": {
"16": "icons/checklist.png",
"48": "icons/checklist.png",
"128": "icons/checklist.png"
}
}